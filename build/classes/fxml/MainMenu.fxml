<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="768" prefWidth="1024" stylesheets="@../styles/mainmenu.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wordpic.controllers.MainMenuController">

    <!-- Parte central (botones principales libres) -->
    <center>
        <AnchorPane fx:id="centerPane">
            <Button fx:id="playButton" layoutX="333.0" layoutY="472.0" prefHeight="60" prefWidth="200" styleClass="play-button" text="JUGAR" />
            <Button fx:id="resultsButton" layoutX="333.0" layoutY="581.0" prefHeight="60" prefWidth="200" styleClass="results-button" text="RESULTADOS" />
            <Button fx:id="soundButton" layoutX="821.0" layoutY="136.0" prefHeight="62.0" prefWidth="71.0" styleClass="side-button" text="🔊" />

            <ImageView fitHeight="73.0" fitWidth="216.0" layoutX="325.0" layoutY="467.0" mouseTransparent="true" pickOnBounds="false" preserveRatio="true">
                <image>
                    <Image url="@../images/jugar.png" />
                </image>
            </ImageView>

            <ImageView fitHeight="271.0" fitWidth="573.0" layoutX="153.0" layoutY="176.0" mouseTransparent="true" pickOnBounds="false" preserveRatio="true">
                <image>
                    <Image url="@../images/titulo.png" />
                </image>
            </ImageView>

            <ImageView fitHeight="74.0" fitWidth="1058.0" layoutX="-101.0" layoutY="-1.0" mouseTransparent="true" pickOnBounds="false" preserveRatio="true">
                <image>
                    <Image url="@../images/borde2.png" />
                </image>
            </ImageView>

            <ImageView fitHeight="83.0" fitWidth="98.0" layoutX="802.0" layoutY="136.0" mouseTransparent="true" pickOnBounds="false" preserveRatio="true">
                <image>
                    <Image url="@../images/audio.png" />
                </image>
            </ImageView>

            <ImageView fitHeight="78.0" fitWidth="301.0" layoutX="277.0" layoutY="574.0" mouseTransparent="true" pickOnBounds="false" preserveRatio="true">
                <image>
                    <Image url="@../images/resultados.png" />
                </image>
            </ImageView>
        </AnchorPane>
    </center>

    <!-- Lado izquierdo (botones de ajustes/info) -->
    <left>
        <AnchorPane>
            <Button fx:id="settingsButton" layoutX="28.0" layoutY="263.0" prefHeight="60" prefWidth="60" styleClass="side-button" text="⚙" />
            <Button fx:id="infoButton" layoutX="28.0" layoutY="414.0" prefHeight="60" prefWidth="60" styleClass="side-button" text="❗" />

            <ImageView fitHeight="94.0" fitWidth="70.0" layoutX="24.0" layoutY="246.0" mouseTransparent="true" pickOnBounds="false" preserveRatio="true">
                <image>
                    <Image url="@../images/config.png" />
                </image>
            </ImageView>

            <ImageView fitHeight="101.0" fitWidth="76.0" layoutX="23.0" layoutY="393.0" mouseTransparent="true" pickOnBounds="false" preserveRatio="true">
                <image>
                    <Image url="@../images/ayuda.png" />
                </image>
            </ImageView>
        </AnchorPane>
    </left>

    <!-- Lado derecho (botón de sonido arriba a la derecha) -->
    <right>
        <AnchorPane />
    </right>

    <!-- Parte inferior (decoración) -->
    <bottom>
        <HBox fx:id="bottomDecor" prefHeight="60">
            <children>
                <ImageView fitHeight="76.0" fitWidth="1058.0" mouseTransparent="true" pickOnBounds="false" preserveRatio="true">
                    <image>
                        <Image url="@../images/borde3.png" />
                    </image>
                </ImageView>
            </children>
        </HBox>
    </bottom>

</BorderPane>
